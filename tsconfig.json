{
    "compilerOptions": {
      /* Language and Environment */
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
  
      /* Paths & Imports */
      "baseUrl": ".",
      "paths": {
        "@pages/*": ["pages/*"],
        "@fixtures/*": ["tests/fixtures/*"],
        "@utils/*": ["utils/*"]
      },
  
      /* Type Safety */
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
  
      /* Playwright */
      "types": ["node", "@playwright/test"],
  
      /* Output */
      "noEmit": true
    },
  
    "include": [
      "tests/**/*.ts",
      "pages/**/*.ts",
      "utils/**/*.ts",
      "test.config.ts"
    ]
  }
  